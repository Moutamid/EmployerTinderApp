<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FamilyWellness" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusbar</item>
        <item name="colorPrimary">@color/statusbar</item>
        <item name="colorPrimaryDark">@color/statusbar</item>
        <item name="colorAccent">@color/statusbar</item>


    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <!--Toolbar theme-->
    <style name="CustomToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <!--Menu Item Theme-->
    <style name="CustomPopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

    <!--Input Theme-->
    <style name="CustomInputStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorStandardBlack</item>
        <item name="android:theme">@color/colorDarkBlue</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/bg_layer_3</item>
        <item name="colorControlNormal">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:background">@color/bg_layer_3</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/transparent</item>
        <!-- Add more customizations as needed -->
    </style>
    <style name="ErrorInHintTextInputDisable">
        <item name="android:textColorHint">@color/text_color_error_hint</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">4.5dp</item>
        <item name="fontFamily">@font/kanit_medium</item>
        <item name="background">@null</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ErrorInHintTextInput">
        <item name="android:textColorHint">@color/text_color_error_hint</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">9.5dp</item>
        <item name="fontFamily">@font/kanit_regular</item>
        <item name="background">@null</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/text_color_error_hint</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="height">50dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="Theme.FamilyWellness" parent="Base.Theme.FamilyWellness" />
</resources>